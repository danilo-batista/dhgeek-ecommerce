<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/styles/base/reset.css" />
  <link rel="stylesheet" href="/styles/base/normalize.css" />
  <link rel="stylesheet" href="/styles/base/variables.css" />

  <link rel="stylesheet" href="/styles/home.css">
  <link rel="stylesheet" href="/styles/produto.css">
  <link rel="stylesheet" href="/styles/partials/main-footer.css">

  <title>
    <%= productData.title %> | Disney Brasil
  </title>
</head>

<body>
  <div>
    <%- include("./partials/header.ejs") %>
      <main>
        <section class="hero">
          <img class="hero--image" src="/upload/<%= productData.productionBanner %>"
            alt="Anúncio da nova linha de produtos da marca <%= productData.disneyBrand %>" />
        </section>

        <div class="path">
          <a href="/home">Home</a> > <a href="/produtos">Todos os produtos</a> > <a
            href="/produtos/<%= productData.category.toLowerCase() %>">
            <%= productData.category %>
          </a> > <%= productData.name %>
        </div>

        <section class="item">
          <div class="item__gallery">
            <div class="item__gallery__main">
              <img class="item__gallery__main--image" src="\upload\<%= productData.productImages[0].path %>"
                alt="<%= productData.name %>" />
            </div>
            <div class="item__gallery__mini">
              <div class="item__gallery__mini-card">
                <img class="item__gallery__mini-card--image" src="\upload\<%= productData.productImages[0].path %>"
                  alt="<%= productData.name %>" />
              </div>
              <div class="item__gallery__mini-card">
                <img class="item__gallery__mini-card--image" src="\upload\<%= productData.productImages[0].path %>"
                  alt="<%= productData.name %>" />
              </div>
              <div class="item__gallery__mini-card">
                <img class="item__gallery__mini-card--image" src="\upload\<%= productData.productImages[0].path %>"
                  alt="<%= productData.name %>" />
              </div>
            </div>
          </div>
          <% for (let productPrice of productData.productPromotions) { %>
            <div class="item__data">
              <p class="item__data__name">
                <%= productData.name %>
                  <div class="item__data__pricing">
              </p>
              <p class="item__data--off">
                <%= productPrice.discount %>% OFF
              </p>
              <div class="item__data__pricing-box">
                <p class="item__data--old-price">
                  R$ <%= productData.fullPrice %>
                </p>
                <p class="item__data--price">
                  R$ <%= productPrice.promotionalPrice %>
                </p>
              </div>
            </div>
            <% } %>
              <div class="item__data__buying">
                <div class="item__buying__buttons">
                  <input type="button" class="item__buying--cart-button" id="cartButton"
                    value="Adicionar ao carrinho" />
                  <input type="button" class="item__buying--buy-button" id="buyButton" value="Comprar agora" />
                </div>
                <p class="item__buying--suggestion">
                  Pague com KOIN em 3x sem juros no boleto!
                </p>
              </div>
        </section>

        <section class="products">
          <div class="products__banner__title">
            <div class="products__banner__buttons">
              <a href="#"><img src="/images/icons/ver-mais-produtos.svg" alt="ver-mais-produtos"></a>
              <a href="/produtos/<%= productData.category.toLowerCase() %>"
                class="products__banner__buttons--see-more">Veja
                mais produtos
                <span>
                  <%= productData.category %>
                </span>
              </a>
              <a href="#"><img src="/images/icons/ir-para-topo.svg" alt="ir-para-topo"></a>
              <a href="#" class="products__banner__buttons--go-top">Ir para o topo</a>
            </div>
          </div>

          <div class="products__card">
            <div>
              <a href="#" id="back-button"><img src="/images/icons/left-arrow.svg" alt="back-button"></a>
              <a href="#" id="next-button"><img src="/images/icons/right-arrow.svg" alt="next-button"></a>
            </div>

            <div class="products__card__area">
              <% for (let product of productsList) { %>
                <% if(product.category===productData.category ) { %>
                  <div class="products__card__item"
                    onclick="location.href='/produtos/<%= product.id %>/<%= product.slug %>'" style="cursor: pointer;">
                    <img class="products__card__img" src="\upload\<%= product.productImages[0].path %>"
                      alt="<%= product.name %>" />
                    <div class="products__card__info">
                      <a href="#">
                        <%= product.name %>
                      </a>
                      <% for (let productPrice of product.productPromotions) { %>
                        <p><span id="real">R$</span>
                          <%= productPrice.promotionalPrice %>
                        </p>
                        <span>
                          <%= productPrice.paymentsConditions %>x de R$ <%= productPrice.paymentsValues %>
                        </span>
                        <% } %>
                    </div>
                  </div>
                  <% } %>
                    <% } %>
            </div>

          </div>
        </section>

        <article class="description">
          <p class="description__title">
            Descrição
          </p>
          <p class="description__text">
            <%= productData.description %>
          </p><br>
          <p class="description__text">
            <strong>Fabricante</strong>: <%= productData.manufacturer %><br>
              <strong>Série</strong>: <%= productData.brand %><br>
                <strong>Personagem</strong>: <%= productData.character %><br>
                  <strong>Material base</strong>: <%= productData.material %><br>
                    <strong>Peso<small>(kg)</small></strong>: <%= productData.weight %> kg<br>
                      <strong>Altura<small>(cm)</small></strong>: <%= productData.height %> cm<br>
                        <strong>Largura<small>(cm)</small></strong>: <%= productData.width %> cm<br>
                          <strong>Profundidade<small>(cm)</small></strong>: <%= productData.depth %> cm<br>
          </p>
        </article>

        <section class="products">
          <div class="products__banner__title">
            <div class="products__banner__buttons">
              <a href="#"><img src="/images/icons/ver-mais-produtos.svg" alt="ver-mais-produtos"></a>
              <a href="/produtos" class="products__banner__buttons--see-more">Veja mais produtos de diversas linhas
              </a>
              <a href="#"><img src="/images/icons/ir-para-topo.svg" alt="ir-para-topo"></a>
              <a href="#" class="products__banner__buttons--go-top">Ir para o topo</a>
            </div>
          </div>
          <div class="products__card">
            <div>
              <a href="#" id="back-button"><img src="/images/icons/left-arrow.svg" alt="back-button"></a>
              <a href="#" id="next-button"><img src="/images/icons/right-arrow.svg" alt="next-button"></a>
            </div>
            <div class="products__card__area">
              <% for (let product of productsList) { %>
                <div class="products__card__item"
                  onclick="location.href='/produtos/<%= product.id %>/<%= product.slug %>'" style="cursor: pointer;">
                  <img class="products__card__img" src="\upload\<%= product.productImages[0].path %>"
                    alt="<%= product.name %>" />
                  <div class="products__card__info">
                    <a href="#">
                      <%= product.name %>
                    </a>
                    <% for (let productPrice of product.productPromotions) { %>
                      <p><span id="real">R$</span>
                        <%= productPrice.promotionalPrice %>
                      </p>
                      <span>
                        <%= productPrice.paymentsConditions %>x de R$ <%= productPrice.paymentsValues %>
                      </span>
                  </div>
                </div>
                <% } %>
                  <% } %>
            </div>
          </div>
        </section>

        <%- include("./partials/main-footer") %>
      </main>
      <%- include("./partials/footer") %>
        <%- include("./partials/copyright") %>
</body>

</html>